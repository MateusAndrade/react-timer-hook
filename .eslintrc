{
  "parser": "babel-eslint",
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-use-before-define": "off",
    "no-unused-expressions": [ 2,{
      "allowShortCircuit": true,
    }],
  },
  "extends": "airbnb"
}